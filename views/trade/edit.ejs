<%- include('../partials/header.ejs')%>
<div id="content">
    <form method="post" action="/trading/<%= trade.id%>?_method=PUT">
        <table>
            <tr>
                <td><label for="title" >Title</label></td>
                <td><input type="text" id="title" name="title" value = "<%= trade.title%>" class = "fixed-width"></td>
            </tr>
            <tr><td class = "align-top"><label for="details">Details</label></td>
                <td><textarea rows="5" id="details" name="details" class = "fixed-width"><%= trade.details%></textarea></td>
            </tr>
            <tr>
                <td><label for="title" >Category</label></td>
                <td><input type="text" id="category" name="category" value = "<%= trade.category%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="title" >Trading status</label></td>
                <td><input type="text" id="status" name="status" value = "<%= trade.status%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="title" >Image link</label></td>
                <td><input type="text" id="image" name="image" value = "<%= trade.image%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td colspan="2" class = "align-right"><button>Submit</button></td>
            </tr>
            </table>        
    </form>
</div>
<%- include('../partials/footer.ejs')%>